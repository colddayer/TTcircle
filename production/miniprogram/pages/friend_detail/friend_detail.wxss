/* pages/friend_detail/friend_detail.wxss */
.friend_Dynamic_Content{
  height: 100%;
  width: 100%;
  background-color: rgba(255, 255, 255, 0.3);
}
/* 头部时间显示 */
.header{
  display: flex;
  justify-content: center;
}
.header .now_Time{
  color: rgba(56, 56, 56, 1);
  background-color: rgba(255, 255, 255, 0.3);
  border-radius: 16px;
  font-size: 11px;
	line-height: 150%;
  margin-top: 20rpx; 
}
/* 球友圈的用户展示 */
.member_button{
  position: fixed;
  top: 0;
  right: 0;
}
.member_button .member{
  transform: rotate(-90deg);
  width: 56rpx;
  height: 56rpx;
  background: url("data:image/svg+xml;base64,");
  background-size: cover;
}
/* 每个动态的容器样式 */
.Dynamic_Content Content{
  margin-top: 20rpx;
}
/* 用户发布动态的样式，flex布局分为左中右 */
.Content{
  width: 100%;
  display: flex;
}
.Content .Content_left{
  flex: 1
}
.Content .Content_mid{
  flex: 4.49;
  margin-left: 18rpx;
}
.Content .Content_right{
  flex: 1.62;
  display: flex;
  margin-top: 46rpx;
  margin-left: 20rpx;
}
.Content_left image{
  height: 84rpx;
  width: 84rpx;
  margin-left: 20rpx;
  background-color: rgba(247, 247, 247,1);
}
.Content_mid .top{
  display: flex;
  align-items: flex-end;
}
.Content_mid .more_content{
  font-size: 12px;
  color: rgba(80, 80, 80, 1);
  line-height: 150%;
}
.Content_mid .top .name{
  color: rgba(87, 107, 149, 1);
	font-size: 14px;
	line-height: 140%;
}
.Content_mid .top .time{
  color: rgba(115, 115, 115, 1);
	font-size: 12px;
	line-height: 140%;
  margin-left: 8rpx;
}
.Content_mid text{
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  color: rgba(43, 43, 43, 1);
	font-size: 14px;
	line-height: 110%;
  margin-top: 20rpx;
}
.Content_right .icon{
  display: flex;
  justify-content: center
}
.Content_right image{
  width: 36rpx;
	height: 36rpx;
  margin-top: 10rpx;
}
.Content_right .more{
  height: 64rpx;
  width:60rpx;
  flex: 0.6;
}
.Content_right .like{
  height: 64rpx;
  width:60rpx;
  flex: 1;
}
.Content_right .text{
  color: rgba(80, 80, 80, 1);
	font-size: 6px;
	line-height: 150%;
}
.Content_right .like .text{
  margin-left: 24rpx;
}
.Comment{
  display: flex
}
/* 三条评论的样式 */
.Comment .container{
    margin-left: 124rpx;
    padding-top: 28rpx;
    max-height: 800rpx; 
}
.Comment .container .title{
    color: rgba(166, 166, 166, 1);
    font-size: 11px;
    line-height: 150%;
}
.Comment .container .Comment_List{
    width: 500rpx;
	  height: 114rpx;
    display: flex;
    margin-top: 12rpx;
}
.Comment .container .Comment_List .Comment_header_image image{
  height: 64rpx;
  width: 64rpx;
  background-color: rgba(247, 247, 247,1);
}
.Comment .container .Comment_List .Comment_content{
   margin-left: 32rpx;
}
.Comment .container .Comment_List .Comment_content .Comment_name{
  color: rgba(87, 107, 149, 1);
	font-size: 11px;
	line-height: 120%;
}
/* 限制评论的行数最高两行 多的用省略号代替 */
.Comment .container .Comment_List .Comment_content .Comment_content_detail{
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: rgba(22, 21, 25, 1);
	font-size: 12px;
	line-height: 130%;

}

.footer{
  display: flex;
  justify-content: center;
  margin-bottom: 60rpx;
}
/* 横线阴影 */
.transverse_line{
  color: rgba(223, 223, 221, 1);
	background-color: rgba(223, 223, 221, 1);
  line-height: 150%;
	box-shadow: 0px 2px 2px 0px rgba(0, 0, 0, 0.5);
  width: 560rpx;
	height: 4rpx;
}
add-wrap {
  position:fixed;
  right: 0;
  bottom:0;
  display:flex;
  width:100%;
  justify-content:center;
}
/* 写动态的按钮样式 */
.Add_Content{
  position: fixed;
  width: 100rpx;
	height: 100rpx;
	right: 16rpx;
	bottom: 114rpx;
	color: rgba(80, 80, 80, 1);
	background-color: rgba(0, 159, 232, 1);
	border-radius: 52rpx;
	font-size: 16px;
	line-height: 150%;
	box-shadow: 0px 1px 1px 0px rgba(0, 0, 0, 0.5);
	text-align: center;
}
.Add_Content .pan{
  z-index: 1000;
  width: 40rpx;
  height: 40rpx;
  margin-top: 10rpx;
  margin-left: 30rpx;
 background: url("data:image/svg+xml;base64,");
  background-size: cover;
  /* 这个一定要加，不然会看不到 */
}
.Add_Content .text{
	color: rgba(255, 255, 255, 1);
	font-size: 12px;
	line-height: 150%;
	text-align: left;
  margin-left: 14rpx;
}

