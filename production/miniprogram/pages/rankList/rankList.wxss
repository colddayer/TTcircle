/* pages/rankList/rankList.wxss */
.page-bottom {
  width: 100%;
  height: 100%;
  position: relative;
  background-image: url(https://image.weilanwl.com/color2.0/cardBg.png);
  background-size: cover;
  background-position: center;
  padding: 30rpx 36rpx 0 36rpx;
  background-color: #5D7EDD;
}
.list{
  background-color: #fffef9;
  height: calc(100% - 50rpx);
  border-radius:10px; 
}
.list-title{
  text-align: center;
  line-height: 80rpx;
  font-size: 26rpx;
  font-weight: bold;
  color: rgba(41, 41, 41, 1);
}
.li{
  display: flex;
  width: 100%;
  height: 120rpx;
  padding: 20rpx 0;
}
.number{
  width: 80rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 40rpx;
  font-style:italic; 
}
.li-img{
  width: 80rpx;
  height: 80rpx;
  /* border: 1px solid black; */
  border-radius: 2px;
}
.detail{
  flex: 5;
}
.nickName,.rank{
  margin-left: 16rpx;
  color:rgba(80, 80, 80, 1);
}
.level,.score{
  font-size: 24rpx;
  line-height: 80rpx;
  margin-right: 30rpx;
  color:rgba(80, 80, 80, 1);
}
.active{
  background-color: rgba(217, 217, 217, 1);
}
.mask{
  width: 100%;
  height: 100vh;
  position: absolute;
  background-color: rgba(255, 255, 255,0.2);
  top:0;
  z-index: 1;
  animation: show 1s linear forwards;
}