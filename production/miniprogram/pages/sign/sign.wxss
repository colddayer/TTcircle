/* pages/sign/sign.wxss */

page {
  background-color: #eee;
}
.calendar-style{
  color: white
}
.header {
  width: 100%;
  height: 360rpx;
  background-color: #5D7EDD;
  border-radius: 0 0 32rpx 32rpx;
  position: relative;
}

.year {
  position: absolute;
  width: 140rpx;
  height: 90rpx;
  top: 35rpx;
  left: 54rpx;
  color: rgba(255, 255, 255, 1);
  font-size: 30px;
}

.month {
  width: 340rpx;
  height: 148rpx;
  font-size: 100rpx;
  color: white;
  border: 2px solid rgba(255, 255, 255, 0.5);
  text-align: center;
  border-radius: 20px;
  position: absolute;
  left: 300rpx;
  top: 80rpx;
  background-color: #5D7EDD;
  z-index: 2;
}

.left-circle {
  width: 132rpx;
  height: 132rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  position: absolute;
  top: 50rpx;
  left: 80rpx;
}

.left-circle__small {
  width: 78rpx;
  height: 78rpx;
  background-color: rgba(255, 255, 255, 0.1);
  position: absolute;
  border-radius: 50%;
  top: 125rpx;
  left: 150rpx;
}

.right-circle {
  width: 132rpx;
  height: 132rpx;
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  position: absolute;
  top: 165rpx;
  left: 550rpx;
  z-index: 2;
}

.calendar {
  position: absolute;
  width: 90%;
  left: 5%;
  top: 300rpx;
}
.sign{
  width: 200rpx;
  height:264rpx;
  background-color: #5D7EDD;
  box-shadow: 0px 3px 3px 0px rgba(0, 0, 0, 0.5);
  text-align: center;
  position: absolute;
  bottom: 100rpx;
  color: white;
  border-radius:5px; 
}
.sign-left{
  left: 5%;
}
.sign-right{
  right:5%;
}
.sign-day{
  font-size: 100rpx;
  margin-top: 34rpx;
}
.i-day{
  font-size: 32rpx;
}
.sign-text{
  margin-top: 30rpx;
  font-size: 32rpx;
}
.dot{
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  position: absolute;
  background-color: white;
  top: 12rpx;
  opacity: 0.9;
}
.dot-1{
  left: 20rpx;
}
.dot-2{
  left: 70rpx;
}
.dot-3{
  left: 120rpx;
}
.dot-4{
  left: 170rpx;
}