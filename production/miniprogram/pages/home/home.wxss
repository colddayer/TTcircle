.tower-swiper {
  width: 100%;
  position: absolute;
  bottom: 105rpx;
  left: 50%;
  transform: translateX(-50%);
}

.tower-swiper .tower-item {
  transform: scale(calc(0.4 + var(--index) / 10));
  margin-left: calc(var(--left) * 170rpx - 150rpx);
  z-index: var(--index);
}

.swiper-item- {
  width: 600rpx;
  height: 600rpx;
  transform: translateX(-30rpx);
}

