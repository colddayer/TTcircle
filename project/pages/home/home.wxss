/* pages/home/home.wxss */

.swiper-con swiper {
  width: 100%;
  height: 30vh;
}

.swiper-con .slide-image {
  width: 100%;
}

.tip-con {
  height: 8vh;
  float: left;
  text-align: center;
  width: 100%;
}

.tip-con .tip {
  font-size: 24rpx;
  line-height: 8vh;
  color: white;
}

.main-con {
  box-sizing: border-box;
  height: 70vh;
  background-color: #27156A;
}

.button__float {
  width: 100rpx;
  font-size: 32rpx;
  text-align: center;
  background-color: white;
}

.ranking-list {
  float: left;
  border-radius:0 3px 3px 0; 
}

.sign {
  float: right;
   border-radius:3px 0 0 3px; 
}

.circle-con {
  width: 100%;
  height: 100%;
  position: relative;
}

.circle {
  width: 250rpx;
  height: 250rpx;
  border-radius: 50%;
  position: absolute;
  background-color: white;
  text-align: center;
  top: 40%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.circle .circle-name {
  margin: 10rpx;
}

.circle .circle-slogan {
  font-size: 24rpx;
}
.circle-swiper__con{
  overflow: hidden;
  width: 100%;
  height: calc(88% - 32rpx);
}
.circle-swiper__con swiper{
  height: 100%;
}